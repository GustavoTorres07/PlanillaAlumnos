
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Registrar</title>
    <link href="//netdna.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
    <link href="~/Content/css/Registrar.css" rel="stylesheet" />
</head>
<body>
    <div class="container">
        <div class="row">
            <div class="col-xs-12 col-sm-8 col-md-6 col-sm-offset-2 col-md-offset-3">
                <form action="@Url.Action("Registrar","Acceso")" method="post" role="form">
                    <h2>Formulario de Registro</h2>
                    <hr class="colorgraph">
                    <div class="row">
                    </div>
                    <div class="form-group">
                        <input type="email" name="Correo" id="Correo" class="form-control input-lg" placeholder="Email" tabindex="4">
                    </div>
                    <div class="row">
                        <div class="col-xs-12 col-sm-6 col-md-6">
                            <div class="form-group">
                                <input type="password" name="Clave" id="Clave" class="form-control input-lg" placeholder="Contraseña" tabindex="5">
                            </div>
                        </div>
                        <div class="col-xs-12 col-sm-6 col-md-6">
                            <div class="form-group">
                                <input type="password" name="ConfirmarClave" id="ConfirmarClave" class="form-control input-lg" placeholder="Confirmar Contraseña" tabindex="6">
                            </div>
                        </div>
                    </div>

                    <hr class="colorgraph">
                    <div class="row">
                        <div class="col-xs-12 col-md-6"><input type="submit" value="Registrar"  class="btn btn-primary btn-block btn-lg" tabindex="7"></div>
                        <div class="col-xs-12 col-md-6"><a href="@Url.Action("Login","Acceso")" class="btn btn-success btn-block btn-lg">Ya tengo cuenta</a></div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</body>
</html>
